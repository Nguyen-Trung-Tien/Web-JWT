<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Edit user</title>
    </head>
    <body>

        <div class="container">
            <div class="row">
                <div class="edit-user-infor-container">
                    <form method="post" action="/user/user-update">
                        <div class="mt-3"> <h3>Update a new user: </h3></div>
                        <input hidden value="<%= userData.id || '' %>"
                            name="id">
                        <div class="mb-3 mt-3 col-6">
                            <label
                                for="email" class="form-label">Email
                            </label>
                            <input
                                type="email"
                                class="form-control"
                                id="email"
                                name="email"
                                value="<%= userData.email || '' %>"
                                required>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-6"></div>

                        <div class="mb-3 mt-3 col-6">
                            <label
                                for="username"
                                class="form-label">user name</label>
                            <input
                                type="text"
                                class="form-control"
                                name="username"
                                id="username"
                                value="<%= userData.username || '' %>"
                                required>
                        </div>
                        <div class="col-6 pd-3"></div>
                        <div class="col-12">
                            <button type="submit"
                                class="btn btn-primary">Update</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </body>
</html>