<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Latest compiled and minified CSS -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
            rel="stylesheet">

        <!-- Latest compiled JavaScript -->
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Create user</title>
    </head>
    <body>

        <div class="container">
            <div class="row">
                <div class="user-infor-container">
                    <form method="post" action="/user/create-user">
                        <div class="mt-3"> <h3>Create a new user: </h3></div>
                        <div class="mb-3 mt-3 col-6">
                            <label
                                for="email" class="form-label">Email
                                address</label>
                            <input type="email" class="form-control" id="email"
                                name="email" required>
                        </div>
                        <div class="col-6"></div>
                        <div class="mb-3 mt-3 col-6">
                            <label for="password"
                                class="form-label">Password</label>
                            <input type="password" class="form-control"
                                name="password"
                                id="password" required>
                        </div>
                        <div class="col-6"></div>

                        <div class="mb-3 mt-3 col-6">
                            <label
                                for="username"
                                class="form-label">user name</label>
                            <input type="text" class="form-control"
                                name="username"
                                id="username" required>
                        </div>
                        <div class="col-6 pd-3"></div>
                        <div class="col-12">
                            <button type="submit"
                                class="btn btn-primary">Submit</button>
                        </div>

                    </form>
                </div>
                <div class="user-table mt-3">
                    <h3> Table user</h3>
                    <table class="table table-hover table-bordered">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Email</th>
                                <th scope="col">User name</th>
                                <th> Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (userList && userList.length > 0) { %>
                            <% userList.forEach((item, index) => { %>
                            <tr>
                                <th scope="row"><%= index + 1 %></th>
                                <td><%= item.email || '' %></td>
                                <td><%= item.username || '' %></td>
                                <td>
                                    <a class="btn btn-warning"
                                        href="/user-update/<%= item.id %>">
                                        Edit
                                    </a>
                                    <form style="display:inline"
                                        action="/delete-user/<%= item.id || item.user_id %>"
                                        method="POST">
                                        <button class="btn btn-danger"
                                            type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                            <% } else { %>
                            <tr>
                                <td colspan="4" class="text-center">No users
                                    found</td>
                            </tr>
                            <% } %>
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </body>
</html>